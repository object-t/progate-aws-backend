{
  "family": "fastapi-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "fastapi",
      "image": "<IMAGE1_URI>",
      "essential": true,
      "cpu": 256,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "<AWS_ACCESS_KEY_ID>"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "<AWS_SECRET_ACCESS_KEY>"
        },
        {
          "name": "DYNAMODB_ENDPOINT",
          "value": "dynamodb.ap-northeast-1.amazonaws.com"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "<AWS_DEFAULT_REGION>"
        },
        {
          "name": "AWS_REGION",
          "value": "<AWS_REGION>"
        },
        {
          "name": "REGION",
          "value": "<REGION>"
        },
        {
          "name": "USERPOOL_ID",
          "value": "<USER_POOL_ID>"
        },
        {
          "name": "APP_CLIENT_ID",
          "value": "<APP_CLIENT_ID>"
        },
        {
          "name": "BEDROCK_REGION",
          "value": "<BEDROCK_REGION>"
        },
        {
          "name": "ENVIRONMENT",
          "value": "<ENVIRONMENT>"
        },
        {
          "name": "CORS_ORIGINS",
          "value": "<CORS_ORIGINS>"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/logs/terraform/fastapi",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "terraform"
        }
      }
    }
  ]
}
